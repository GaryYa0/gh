pipeline {
  agent any
  tools {
    nodejs 'Node_18'
  }
  stages {
    stage('clear cache') {
      steps {
        echo 'clear cache...'
        sh 'rm -rf ./node_modules'
      }
    }
    stage('Install dependencies') {
      steps {
        echo 'Installing dependencies...'
        sh 'npm install'
      }
    }
    stage('Deploy') {
      steps {
        echo 'Deploying...'
        // Add your deploy steps here
        sh 'npm run deploy'
      }
    }
  }
}

