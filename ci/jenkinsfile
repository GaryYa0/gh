pipeline {
  agent any
  tools {
    nodejs 'Node_18'
  }
  stages {
    stage('Install dependencies') {
      steps {
        echo 'Installing dependencies...'
        sh 'npm install'
      }
    }
    stage('Build') {
      steps {
        echo 'Building...'
        sh 'npm run build'
      }
    }
    stage('Test') {
      steps {
        echo 'Testing...'
        // Add your test steps here
      }
    }
    stage('Deploy') {
      steps {
        echo 'Deploying...'
        // Add your deploy steps here
        sh 'git pull --rebase origin gh-pages'
        sh 'npm run deploy'
      }
    }
  }
}

